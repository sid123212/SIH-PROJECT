<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>WanderLust</title>

  <!-- Bootstrap 5 -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" />

  <!-- Bootstrap Icons & Font Awesome -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"/>

  <!-- Flatpickr -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">

  <!-- Custom Styles -->
  <link rel="stylesheet" href="/css/style.css" />

  <style>
    :root { --crimson: #DC143C; }

    body {
      background-color: white;
      min-height: 100vh;
      font-size: 1.1rem; /* Increased default font size */
    }

    h1, h2, h3, h4, h5, h6 {
      color: white; /* Headings white */
      font-weight: 600;
    }

    .btn-crimson {
      background-color: var(--crimson);
      color: #fff;
      font-weight: 600;
      font-size: 1rem;
    }
    .btn-crimson:hover {
      background-color: #b01030;
      color: #fff;
    }

    .text-crimson { color: var(--crimson); font-weight: 600; }

    /* Plane glow */
    .plane-glow { filter: drop-shadow(2px 2px 6px crimson); }

    /* Loader */
    #loader { transition: opacity 1s ease; }
    .fade-out { opacity: 0; pointer-events: none; }

    /* Navbar dark style */
    .navbar-dark.bg-dark { background-color: #000 !important; }
    .navbar-dark .navbar-nav .nav-link { color: #fff; font-weight: 500; }
    .navbar-dark .navbar-brand { color: var(--crimson); font-weight: bold; font-size: 1.5rem; }
    .navbar-dark .btn-outline-danger { border-color: var(--crimson); color: var(--crimson); font-weight: 600; }
    .navbar-dark .btn-outline-danger:hover { background-color: var(--crimson); color: #fff; }
  </style>
</head>

<body>
  <!-- Loader -->
  <div id="loader" class="d-flex justify-content-center align-items-center bg-white position-fixed top-0 start-0 w-100 h-100" style="z-index: 9999;">
    <div class="spinner-border text-danger" role="status" style="width: 3rem; height: 3rem;">
      <span class="visually-hidden">Loading...</span>
    </div>
  </div>

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top shadow-sm">
    <div class="container-fluid px-3">
      <a class="navbar-brand" href="/dashboard"><i class="fa-solid fa-compass"></i> TEAM VAYU</a>

      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <div class="d-flex flex-wrap justify-content-center gap-3 my-3">
            <a href="/citizen" class="btn btn-success module-btn px-4 py-2"><i class="fas fa-user me-2"></i>Citizen App</a>
            <a href="/airecomandation" class="btn btn-primary module-btn px-4 py-2"><i class="fas fa-map-marker-alt me-2"></i>Source Identification</a>
            <a href="/health" class="btn btn-warning module-btn px-4 py-2"><i class="fas fa-heartbeat me-2"></i>Health Alert</a>
            <a href="/policy" class="btn btn-info module-btn px-4 py-2"><i class="fas fa-file-alt me-2"></i>Policy Dashboard</a>
          </div>
        </ul>

        <div class="d-flex gap-2">
          <a class="btn btn-outline-danger" href="/listings/register">Sign Up</a>
          <a class="btn btn-crimson" href="/listings/login">Login</a>
        </div>
      </div>
    </div>
  </nav>

  <!-- Page Content -->
  <div class="container-fluid px-2 my-5 pt-5">
    <%- body %>
  </div>

  <!-- Bootstrap JS & Flatpickr -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>

  <!-- Loader Script -->
  <script>
    window.addEventListener("load", () => {
      const loader = document.getElementById("loader");
      loader.classList.add("fade-out");
      setTimeout(() => loader.style.display = "none", 500);
    });
  </script>

  <!-- Flatpickr Init -->
  <script>
    flatpickr("#datePicker", { minDate: "today", dateFormat: "Y-m-d", defaultDate: new Date() });
  </script>
</body>
</html>
