

<div class="container mt-5">
  
  <div class="row align-items-center justify-content-center">
    
    <!-- Left: Form -->
    <div class="col-md-6 d-flex justify-content-center">
      <form action="/listings/register" method="POST" style="width: 100%; max-width: 400px;" class="px-3">
        
        <!-- Camera Icon -->
        <div class="text-center mb-4">
          <i class="bi bi-person-circle" style="font-size: 5rem; color: black;"></i>
        </div>
         <h2 class=" offset-4 mb-4">Register</h2>

        <div class="mb-3">
          <label for="username" class="form-label">Username</label>
          <input type="text" id="username" name="username" required class="form-control">
        </div>

       

        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <input type="password" id="password" name="password" required class="form-control">
        </div>

        <div class="d-grid gap-2">
          <button type="submit" class="btn btn-danger">Register</button>
        </div>

        <p class="text-center mt-3">
          Already have an account? <a href="/listings/login">Login here</a>
        </p>
      </form>
    </div>

    <!-- Right: Image -->
    <div class="col-md-6 text-center">
      <img 
        src="https://www.creativefabrica.com/wp-content/uploads/2023/05/11/Torist-world-travel-cartoon-concept-with-Graphics-69390779-1.png" 
        alt="Wanderlust Image" 
        class="img-fluid rounded"
        style="max-height: 450px;"
      />
    </div>

  </div>
</div>